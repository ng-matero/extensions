{
  "name": "extensions-srcs",
  "version": "0.0.0-NOT-USED",
  "engines": {
    "node": ">=16.0.0 <20.0.0",
    "yarn": ">=1.22.0 <2",
    "npm": "Please use Yarn instead of NPM to install dependencies"
  },
  "scripts": {
    "ng": "ng",
    "start": "npm run serve:dev-app",
    "build": "npm run build:dev-app",
    "test": "ng test",
    "e2e": "ng e2e",
    "lint": "npm run lint:ts && npm run lint:scss",
    "lint:ts": "eslint \"projects/**/*.ts\" --fix",
    "lint:scss": "stylelint \"projects/**/*.scss\" --fix",
    "serve:dev-app": "ng serve dev-app",
    "build:dev-app": "ng build dev-app",
    "serve:docs": "ng serve docs",
    "build:docs": "ng build docs --base-href=/extensions/",
    "predeploy": "npm run build:docs",
    "deploy": "angular-cli-ghpages --no-silent --dir=dist/docs",
    "build:lib": "ng build extensions --configuration production && npm run build:themes",
    "build:themes": "sass projects/extensions/core/theming/prebuilt:dist/extensions/prebuilt-themes --load-path=node_modules --style=compressed --no-source-map",
    "build:moment-adapter": "ng build extensions-moment-adapter --configuration production",
    "build:luxon-adapter": "ng build extensions-luxon-adapter --configuration production",
    "build:date-fns-adapter": "ng build extensions-date-fns-adapter --configuration production",
    "publish": "npm run build:lib && cd dist/extensions && npm publish",
    "publish:moment-adapter": "npm run build:moment-adapter && cd dist/extensions-moment-adapter && npm publish",
    "publish:luxon-adapter": "npm run build:luxon-adapter && cd dist/extensions-luxon-adapter && npm publish",
    "publish:date-fns-adapter": "npm run build:date-fns-adapter && cd dist/extensions-date-fns-adapter && npm publish",
    "prepare": "husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.7",
    "@angular/cdk": "^16.2.6",
    "@angular/common": "^16.2.7",
    "@angular/compiler": "^16.2.7",
    "@angular/core": "^16.2.7",
    "@angular/forms": "^16.2.7",
    "@angular/material": "^16.2.6",
    "@angular/material-date-fns-adapter": "^16.2.6",
    "@angular/material-luxon-adapter": "^16.2.6",
    "@angular/material-moment-adapter": "^16.2.6",
    "@angular/platform-browser": "^16.2.7",
    "@angular/platform-browser-dynamic": "^16.2.7",
    "@angular/router": "^16.2.7",
    "@ng-select/ng-select": "^11.1.0",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "date-fns": "^2.30.0",
    "luxon": "^3.4.0",
    "moment": "^2.29.4",
    "ngx-color": "^9.0.0",
    "ngx-progressbar": "^11.1.0",
    "photoviewer": "^3.9.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.6.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.4",
    "@angular-eslint/builder": "^16.2.0",
    "@angular-eslint/eslint-plugin": "^16.2.0",
    "@angular-eslint/eslint-plugin-template": "^16.2.0",
    "@angular-eslint/schematics": "^16.2.0",
    "@angular-eslint/template-parser": "^16.2.0",
    "@angular/cli": "^16.2.4",
    "@angular/compiler-cli": "^16.2.7",
    "@commitlint/cli": "^17.7.0",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/jasmine": "~4.3.0",
    "@types/jasminewd2": "~2.0.10",
    "@types/luxon": "^3.3.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "angular-cli-ghpages": "^1.0.7",
    "eslint": "^8.50.0",
    "gulp": "^4.0.2",
    "highlight-loader": "^0.7.4",
    "highlight.js": "^11.8.0",
    "husky": "^8.0.3",
    "jasmine-core": "~4.5.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^14.0.0",
    "markdown-loader": "^8.0.0",
    "ng-packagr": "^16.2.0",
    "prettier": "^3.0.0",
    "protractor": "~7.0.0",
    "raw-loader": "^4.0.2",
    "stylelint": "^15.10.0",
    "stylelint-config-recommended-scss": "^13.0.0",
    "stylelint-config-standard": "^34.0.0",
    "ts-node": "~10.9.0",
    "typescript": "~5.1.0"
  }
}
