{
  "name": "extensions-srcs",
  "version": "0.0.0-NOT-USED",
  "engines": {
    "yarn": ">=1.22.0 <2",
    "npm": "Please use Yarn instead of NPM to install dependencies"
  },
  "scripts": {
    "ng": "ng",
    "start": "npm run serve:dev-app",
    "build": "npm run build:dev-app",
    "test": "ng test",
    "test:lib:ci": "ng test extensions --browsers=ChromeHeadless --watch=false --code-coverage",
    "e2e": "ng e2e",
    "lint": "npm run lint:ts && npm run lint:scss",
    "lint:ts": "eslint \"projects/**/*.ts\" --fix",
    "lint:scss": "stylelint \"projects/**/*.scss\" --fix",
    "serve:dev-app": "ng serve dev-app",
    "build:dev-app": "ng build dev-app",
    "serve:docs": "ng serve docs",
    "build:docs": "ng build docs --base-href=/extensions/",
    "predeploy": "npm run build:docs",
    "deploy": "angular-cli-ghpages --no-silent --dir=dist/docs",
    "build:themes": "sass projects/extensions/core/theming/prebuilt:dist/extensions/prebuilt-themes --load-path=node_modules --style=compressed --no-source-map",
    "build:lib": "ng build extensions --configuration production && npm run build:themes",
    "postbuild:lib": "cp README.md dist/extensions",
    "build:moment-adapter": "ng build extensions-moment-adapter --configuration production",
    "build:luxon-adapter": "ng build extensions-luxon-adapter --configuration production",
    "build:date-fns-adapter": "ng build extensions-date-fns-adapter --configuration production",
    "publish": "npm run build:lib && cd dist/extensions && npm publish",
    "publish:moment-adapter": "npm run build:moment-adapter && cd dist/extensions-moment-adapter && npm publish",
    "publish:luxon-adapter": "npm run build:luxon-adapter && cd dist/extensions-luxon-adapter && npm publish",
    "publish:date-fns-adapter": "npm run build:date-fns-adapter && cd dist/extensions-date-fns-adapter && npm publish",
    "prepare": "husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^21.0.1",
    "@angular/common": "^21.0.1",
    "@angular/compiler": "^21.0.1",
    "@angular/core": "^21.0.1",
    "@angular/forms": "^21.0.1",
    "@angular/material": "^21.0.1",
    "@angular/material-date-fns-adapter": "^21.0.1",
    "@angular/material-luxon-adapter": "^21.0.1",
    "@angular/material-moment-adapter": "^21.0.1",
    "@angular/platform-browser": "^21.0.1",
    "@angular/router": "^21.0.1",
    "@ng-select/ng-select": "^21.0.0",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "date-fns": "^4.1.0",
    "luxon": "^3.7.2",
    "moment": "^2.30.0",
    "ngx-color": "^10.0.0",
    "ngx-progressbar": "^14.0.0",
    "photoviewer": "^3.10.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.6.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/jasmine": "~4.3.0",
    "@types/jasminewd2": "~2.0.10",
    "@types/luxon": "^3.7.0",
    "@types/node": "^24.10.0",
    "angular-cli-ghpages": "^2.0.3",
    "angular-eslint": "^21.0.1",
    "eslint": "^9.39.0",
    "highlight-loader": "^0.7.4",
    "highlight.js": "^11.11.0",
    "husky": "^9.1.6",
    "jasmine-core": "~4.5.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.2.0",
    "markdown-loader": "^8.0.0",
    "ng-packagr": "^21.0.0",
    "prettier": "^3.7.0",
    "protractor": "~7.0.0",
    "raw-loader": "^4.0.2",
    "stylelint": "^16.26.0",
    "stylelint-config-recommended-scss": "^16.0.0",
    "stylelint-config-standard": "^39.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0"
  }
}
