{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "extensions": {
      "projectType": "library",
      "root": "projects/extensions",
      "prefix": "mtx",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/extensions/tsconfig.lib.json",
            "project": "projects/extensions/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/extensions/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/extensions/test.ts",
            "tsConfig": "projects/extensions/tsconfig.spec.json",
            "karmaConfig": "projects/extensions/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/extensions/**/*.ts",
              "projects/extensions/**/*.html"
            ]
          }
        }
      }
    },
    "extensions-moment-adapter": {
      "projectType": "library",
      "root": "projects/extensions-moment-adapter",
      "prefix": "mtx",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/extensions-moment-adapter/tsconfig.lib.json",
            "project": "projects/extensions-moment-adapter/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/extensions-moment-adapter/tsconfig.lib.prod.json"
            }
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/extensions-moment-adapter/**/*.ts",
              "projects/extensions-moment-adapter/**/*.html"
            ]
          }
        }
      }
    },
    "extensions-luxon-adapter": {
      "projectType": "library",
      "root": "projects/extensions-luxon-adapter",
      "prefix": "mtx",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/extensions-luxon-adapter/tsconfig.lib.json",
            "project": "projects/extensions-luxon-adapter/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/extensions-luxon-adapter/tsconfig.lib.prod.json"
            }
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/extensions-luxon-adapter/**/*.ts",
              "projects/extensions-luxon-adapter/**/*.html"
            ]
          }
        }
      }
    },
    "extensions-date-fns-adapter": {
      "projectType": "library",
      "root": "projects/extensions-date-fns-adapter",
      "prefix": "mtx",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/extensions-date-fns-adapter/tsconfig.lib.json",
            "project": "projects/extensions-date-fns-adapter/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/extensions-date-fns-adapter/tsconfig.lib.prod.json"
            }
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/extensions-date-fns-adapter/**/*.ts",
              "projects/extensions-date-fns-adapter/**/*.html"
            ]
          }
        }
      }
    },
    "docs": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/docs",
      "sourceRoot": "projects/docs/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/docs",
            "index": "projects/docs/src/index.html",
            "main": "projects/docs/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "projects/docs/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/docs/src/favicon.ico",
              "projects/docs/src/assets"
            ],
            "styles": [
              "projects/docs/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "projects/docs/src/environments/environment.ts",
                  "with": "projects/docs/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "buildTarget": "docs:build"
          },
          "configurations": {
            "production": {
              "buildTarget": "docs:build:production"
            },
            "development": {
              "buildTarget": "docs:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "docs:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/docs/src/test.ts",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "projects/docs/tsconfig.spec.json",
            "karmaConfig": "projects/docs/karma.conf.js",
            "assets": [
              "projects/docs/src/favicon.ico",
              "projects/docs/src/assets"
            ],
            "styles": [
              "projects/docs/src/styles.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/docs/**/*.ts",
              "projects/docs/**/*.html"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "projects/docs/e2e/protractor.conf.js",
            "devServerTarget": "docs:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "docs:serve:production"
            }
          }
        }
      }
    },
    "dev-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/dev-app",
      "sourceRoot": "projects/dev-app/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/dev-app",
            "index": "projects/dev-app/src/index.html",
            "main": "projects/dev-app/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "projects/dev-app/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/dev-app/src/favicon.ico",
              "projects/dev-app/src/assets"
            ],
            "styles": [
              "projects/dev-app/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "projects/dev-app/src/environments/environment.ts",
                  "with": "projects/dev-app/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "buildTarget": "dev-app:build"
          },
          "configurations": {
            "production": {
              "buildTarget": "dev-app:build:production"
            },
            "development": {
              "buildTarget": "dev-app:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "dev-app:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/dev-app/src/test.ts",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "projects/dev-app/tsconfig.spec.json",
            "karmaConfig": "projects/dev-app/karma.conf.js",
            "assets": [
              "projects/dev-app/src/favicon.ico",
              "projects/dev-app/src/assets"
            ],
            "styles": [
              "projects/dev-app/src/styles.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/dev-app/**/*.ts",
              "projects/dev-app/**/*.html"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "projects/dev-app/e2e/protractor.conf.js",
            "devServerTarget": "dev-app:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "dev-app:serve:production"
            }
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "schematicCollections": [
      "@angular-eslint/schematics"
    ]
  }
}
